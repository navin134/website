		function boolThing(boolRadio) {
			var list;
			if(boolRadio){
				list = terms;
				
			}else{
				list = defs;
				
			}
			document.getElementById("image").style.visibility = "hidden";
			return list;
			
		}
		
		function displayCue() {
			var list = boolThing(false);
			var rand;
			var counterThing = 0;
			do {
				if((counterThing < list.length) && (counterQ < list.length)){
					alert("runout");
					break;
					
				}
				rand = parseInt(Math.random()*list.length);
				alert(rand);
				
				console.log(rand);
				console.log(counterThing);
				var woosh = !check[rand];
				if(woosh) {
					counterThing++;
					
				}
				
			} while();
			if(check[rand]){
				document.getElementById("clue").value = list[rand];
				check[rand] = false;
				counterQ++;
			}
			
		}
		 
		function checkAnswer() {
			var boolbool = true;
			var list = boolThing(boolbool);
			var answ = document.getElementById("answer").value;
			var str;
			if(asnw == list[counterQ]) {
				str = "images/suc.jpeg";
			}else {
				str = "images/R.png";
			}
			
			var midPoint = window.innerWidth;
			document.getElementById("image").style.left = (midPoint/2)-158;
			document.getElementById("image").style.visibility = "visible";
			
		}
		
